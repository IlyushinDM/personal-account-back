# --- Общие настройки приложения ---
ENV=local
CLINIC_TIMEZONE="Europe/Moscow"

# --- Настройки веб-сервера ---
HTTP_PORT=8080
HTTP_TIMEOUT=5s
HTTP_IDLE_TIMEOUT=60s

# --- Настройки базы данных PostgreSQL ---
# Хост для подключения. 
# 'localhost' для локального запуска, 'postgres' для Docker
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=PASSSWORD
POSTGRES_DB=medical_db
# DSN собирается в config.go
DATABASE_URL="postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?sslmode=disable"

# --- Настройки кэша (Redis) ---
# 'localhost' для локального запуска, 'redis' для Docker
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_ADDR="${REDIS_HOST}:${REDIS_PORT}"
REDIS_PASSWORD=""
REDIS_DB=0

# --- Настройки файлового хранилища MinIO (S3-совместимое) ---
# 'localhost' для локального запуска, 'minio' для Docker
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_ENDPOINT="${MINIO_HOST}:${MINIO_PORT}"
MINIO_ACCESS_KEY="your_minio_access_key"
MINIO_SECRET_KEY="your_minio_secret_key"
MINIO_BUCKET_NAME="medical-files"
MINIO_USE_SSL=false

# --- Настройки аутентификации (JWT) ---
JWT_SECRET_KEY="your-super-secret-key-that-is-very-long-and-secure"
TOKEN_TTL=1h

# --- Настройки SMS-шлюза (пока не используются) ---
SMS_API_KEY="your_sms_provider_api_key"
SMS_SENDER_NAME="MedCenter"