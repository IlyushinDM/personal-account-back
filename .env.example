# ===============================================================
#          ПЕРЕМЕННЫЕ ОКРУЖЕНИЯ ДЛЯ ПРОЕКТА "ЛИЧНЫЙ КАБИНЕТ"
# ---------------------------------------------------------------
# Этот файл содержит секреты и конфигурацию для локальной разработки.
# НЕ ДОБАВЛЯЙТЕ ЭТОТ ФАЙЛ В GIT!
# ===============================================================

# --- Общие настройки приложения ---
# Среда выполнения: local, dev, prod
ENV=local

# --- Настройки базы данных PostgreSQL ---
# Вместо отдельных полей используется стандартный DSN (Data Source Name)
DATABASE_URL="postgres://your_user:your_password@localhost:5432/medical_db?sslmode=disable"

# --- Настройки веб-сервера ---
HTTP_PORT=8080
HTTP_TIMEOUT=5s
HTTP_IdLE_TIMEOUT=60s

# --- Настройки аутентификации (JWT) ---
# Сгенерируйте сложный и длинный ключ для реального проекта
JWT_SECRET_KEY="your-super-secret-key-that-is-very-long-and-secure"
TOKEN_TTL=24h

# --- Настройки файлового хранилища MinIO (S3-совместимое) ---
# Эндпоинт вашего MinIO сервера
MINIO_ENDPOINT="localhost:9000"
# Ключ доступа
MINIO_ACCESS_KEY="your_minio_access_key"
# Секретный ключ
MINIO_SECRET_KEY="your_minio_secret_key"
# Название бакета (корзины) для файлов
MINIO_BUCKET_NAME="medical-files"
# Использовать ли SSL (для production обычно true)
MINIO_USE_SSL=false

# --- Настройки SMS-шлюза ---
# API-ключ вашего SMS-провайдера (например, SMS.ru)
SMS_API_KEY="your_sms_provider_api_key"
# Имя отправителя, которое увидит пользователь
SMS_SENDER_NAME="MedCenter"

# --- Настройки кэша (Redis) ---
REDIS_ADDR="localhost:6379"
REDIS_PASSWORD=""
REDIS_DB=0

# Часовой пояс, в котором работаем (формат IANA)
CLINIC_TIMEZONE="Europe/Moscow"